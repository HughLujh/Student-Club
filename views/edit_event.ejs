<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Event Detail</title>
    <link rel="stylesheet" text="text/css" href="/stylesheets/eventInfor.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/stylesheets/nav.css">
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

</head>

<body onload="check();get_nav();loadInforRequest();autoResize();tabindex();addEnterKey();">
    <header id="head_nav"></header>
    <div id="mainBody">
        <div id="back">
            <a href="/clubs/<%=clubDetails[0].club_id%>"> &lt; <%=clubDetails[0].name%></a>
        </div>
        <div id="row">
            <div id="e_infor">
                <div id="event_edit">
                    <button type="button" id="btn_edit" onclick="edit_text()">Edit information</button>
                </div><br><br>

                <div id="text_body">
                    <form action="/clubs/<%=id%>/events/<%=eid%>/editted" method="post" id="event_text">
                        <span class="e_title">Event Title:</span><br>
                        <textarea id="e_title_name" name="title" rows="1" class="p_text" type="text" onchange="autoResize()"
                            enterkeyhint maxlength="50" readonly><%=infor.title%> </textarea><br>
                        <span class="e_title">Event Content:</span><br>
                        <textarea id="e_content" name="content" rows="3" class="p_text" type="text" onchange="autoResize()"
                            enterkeyhint maxlength="1000" readonly><%=infor.content%> </textarea><br>
                        <span class="e_title">Location:</span><br>
                        <textarea id="e_location" name="location" rows="1" class="p_text" type="text" onchange="autoResize()"
                            enterkeyhint maxlength="200" readonly><%=infor.location%> </textarea><br>
                        <span class="e_title">Time: </span><br>
                        <input type="datetime-local" name="time" value="<%= new Date(infor.event_time).toISOString().slice(0, 16) %>" id="e_time" name="event_time" class="p_text"
                            onchange="autoResize()" enterkeyhint readonly><br><br>
                        <span class="e_title">Event Coordinator Contact Details:</span><br>
                        <span class="e_title">Email: </span><br>
                        <textarea id="coor_email" rows="1" class="p_text" type="text" onchange="autoResize()"
                            enterkeyhint readonly><%=infor.user_email%></textarea><br>
                        <span class="e_title">Phone Number: </span><br>
                        <textarea id="coor_phone" name="phone" rows="1" class="p_text" type="text" onchange="autoResize()"
                            enterkeyhint maxlength="11" readonly><%=infor.manager_phone%></textarea><br>

                        <input name="id" value="<%=id%>" style="display:none;">
                        <input name="eid" value="<%=eid%>" style="display:none;">

                        <div id="change_text">
                            <button type="button" id="btn_cancel" onclick="cancel_change()">Cancel</button>
                            <input id="btn_save" type="submit" value="Save" onclick="save_change()" />
                        </div><br><br>
                    </form>
                </div>


            </div>
            <div id="list">
                <h4>List of Participants</h4>
                <ul id="user_list">
                    <% for(var i=0; i < rsvpList.length; i++) { %>
                    <li>
                        <div class="form-check">
                            <label class="form-check-label">
                                <%=rsvpList[i].username%>
                            </label>
                        </div>
                    </li>
                    <% } %>
                </ul>
            </div>

        </div>

    </div>
    <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="/javascripts/nav.js"></script>
    <script type="text/javascript" src="/javascripts/eventInfor.js"></script>
    <script src="https://kit.fontawesome.com/41381684e7.js" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/javascripts/lib/loginCheck.js"></script>
</body>

</html>
